---
import "../../styles/global.css";
import en from "../../i18n/en.json"; // Make sure your i18n folder exists and has these files
import es from "../../i18n/es.json";

export async function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "es" } },
  ];
}

const { lang } = Astro.params;
const content = lang === "en" ? en : es;
const year = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{content.siteTitle}</title>
  <meta name="description" content={content.siteDescription}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-purple-50">

  <header class="sticky top-0 z-50 w-full border-b bg-white/80 backdrop-blur-md">
    <div class="container mx-auto flex h-16 items-center justify-between px-4">
      <div class="flex items-center space-x-2">
        <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-gradient-to-br from-purple-600 to-purple-800">
          <img src="/logo.svg" alt="PipxLabs Logo" class="h-8 w-8" />
        </div>
        <span class="text-xl font-bold bg-gradient-to-r from-purple-600 to-purple-800 bg-clip-text text-transparent">
          {content.siteTitle}
        </span>
      </div>
      <nav class="hidden md:flex items-center space-x-8">
        <a href={`/${lang}/#services`} class="text-sm font-medium hover:text-purple-600 transition-colors">{content.header.services}</a>
        <a href={`/${lang}/#about`} class="text-sm font-medium hover:text-purple-600 transition-colors">{content.header.about}</a>
        <a href={`/${lang}/#contact`} class="text-sm font-medium hover:text-purple-600 transition-colors">{content.header.contact}</a>
        <a href={`/${lang}/#contact`} class="px-4 py-2 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white rounded-md font-medium transition-all">
          {content.header.getStarted}
        </a>
        <a href={lang === 'en' ? '/es/' : '/en/'} class="text-sm font-medium hover:text-purple-600 transition-colors border px-2 py-1 rounded">
            {lang === 'en' ? 'Espa√±ol' : 'English'}
        </a>
      </nav>
    </div>
  </header>

  <section class="relative overflow-hidden py-20 lg:py-32">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-600/10 via-transparent to-purple-800/10"></div>
    <div class="container mx-auto px-4 relative">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-8">
          <div class="space-y-4">
            <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
              {content.hero.titlePart1}
              <span class="bg-gradient-to-r from-purple-600 to-purple-800 bg-clip-text text-transparent"> {content.hero.titlePart2}</span>
              <br />
              {content.hero.titlePart3}
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed">
              {content.hero.description}
            </p>
          </div>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href={`/${lang}/#contact`} class="bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-lg px-8 py-3 rounded-md text-white font-medium flex items-center">
              {content.hero.startProject}
              <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
          <div class="flex items-center space-x-8 pt-4">
            <div class="text-center">
              <div class="text-2xl font-bold text-purple-600">100%</div>
              <div class="text-sm text-gray-500">{content.hero.securityFocus}</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-purple-600">24/7</div>
              <div class="text-sm text-gray-500">{content.hero.support}</div>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-purple-400 to-purple-600 rounded-3xl blur-3xl opacity-20 animate-pulse"></div>
          <img src="/hero.jpg" alt="Mobile Development Illustration" width="600" height="600" class="relative z-10 w-full h-auto rounded-2xl" />
        </div>
      </div>
    </div>
  </section>

  <section id="services" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center space-y-4 mb-16">
        <span class="inline-block px-3 py-1 rounded-full bg-purple-100 text-purple-700 font-semibold text-sm">{content.servicesSection.expertise}</span>
        <h2 class="text-3xl lg:text-5xl font-bold">{content.servicesSection.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {content.servicesSection.description}
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="group hover:shadow-xl transition-all duration-300 border border-purple-100 hover:border-purple-200 rounded-xl bg-white p-6">
          <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <rect x="7" y="2" width="10" height="20" rx="2" />
              <circle cx="12" cy="18" r="1" />
            </svg>
          </div>
          <div class="text-xl font-semibold mb-2">{content.servicesSection.card1.title}</div>
          <div class="text-gray-600 mb-4">{content.servicesSection.card1.description}</div>
          <ul class="space-y-2">
            {content.servicesSection.card1.features.map((feature: string) => (
              <li class="flex items-center text-sm">
                <svg class="h-4 w-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2l4-4"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
        <div class="group hover:shadow-xl transition-all duration-300 border border-purple-100 hover:border-purple-200 rounded-xl bg-white p-6">
          <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
          </div>
          <div class="text-xl font-semibold mb-2">{content.servicesSection.card2.title}</div>
          <div class="text-gray-600 mb-4">{content.servicesSection.card2.description}</div>
          <ul class="space-y-2">
            {content.servicesSection.card2.features.map((feature: string) => (
              <li class="flex items-center text-sm">
                <svg class="h-4 w-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2l4-4"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
        <div class="group hover:shadow-xl transition-all duration-300 border border-purple-100 hover:border-purple-200 rounded-xl bg-white p-6">
          <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <polygon points="12 2 2 7 12 12 22 7 12 2"/>
              <polyline points="2 17 12 22 22 17"/>
              <polyline points="2 12 12 17 22 12"/>
            </svg>
          </div>
          <div class="text-xl font-semibold mb-2">{content.servicesSection.card3.title}</div>
          <div class="text-gray-600 mb-4">{content.servicesSection.card3.description}</div>
          <ul class="space-y-2">
            {content.servicesSection.card3.features.map((feature: string) => (
              <li class="flex items-center text-sm">
                <svg class="h-4 w-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2l4-4"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-gradient-to-br from-purple-50 to-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <div class="space-y-4">
            <span class="inline-block px-3 py-1 rounded-full bg-purple-100 text-purple-700 font-semibold text-sm">{content.featuresSection.whyChooseUs}</span>
            <h2 class="text-3xl lg:text-4xl font-bold">{content.featuresSection.title}</h2>
            <p class="text-lg text-gray-600">
              {content.featuresSection.description}
            </p>
          </div>
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="h-4 w-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-2">{content.featuresSection.feature1.title}</h3>
                <p class="text-gray-600">
                  {content.featuresSection.feature1.description}
                </p>
              </div>
            </div>
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="h-4 w-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <rect x="3" y="11" width="18" height="11" rx="2"/>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-2">{content.featuresSection.feature2.title}</h3>
                <p class="text-gray-600">
                  {content.featuresSection.feature2.description}
                </p>
              </div>
            </div>
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="h-4 w-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M17 11a4 4 0 1 0-8 0"/>
                  <path d="M21 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M3 21v-2a4 4 0 0 1 3-3.87"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-2">{content.featuresSection.feature3.title}</h3>
                <p class="text-gray-600">
                  {content.featuresSection.feature3.description}
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="relative">
          <img src="/expertise.jpg" alt="Development Process" width="500" height="500" class="w-full h-auto rounded-2xl shadow-2xl" />
        </div>
      </div>
    </div>
  </section>

  <section id="about" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center space-y-8">
        <span class="inline-block px-3 py-1 rounded-full bg-purple-100 text-purple-700 font-semibold text-sm">{content.aboutSection.ourStory}</span>
        <h2 class="text-3xl lg:text-4xl font-bold">{content.aboutSection.title}</h2>
        <p class="text-xl text-gray-600 leading-relaxed">
          {content.aboutSection.description}
        </p>
        <div class="grid md:grid-cols-3 gap-8 pt-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10"/>
                <path d="M2 12h20"/>
                <path d="M12 2a15.3 15.3 0 0 1 0 20"/>
                <path d="M12 2a15.3 15.3 0 0 0 0 20"/>
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">{content.aboutSection.globalReach}</h3>
            <p class="text-gray-600">{content.aboutSection.globalReachDescription}</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <polygon points="12 2 15 8.5 22 9.3 17 14.1 18.2 21 12 17.8 5.8 21 7 14.1 2 9.3 9 8.5 12 2"/>
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">{content.aboutSection.qualityFirst}</h3>
            <p class="text-gray-600">{content.aboutSection.qualityFirstDescription}</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">{content.aboutSection.innovation}</h3>
            <p class="text-gray-600">{content.aboutSection.innovationDescription}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="contact" class="py-20 bg-gradient-to-r from-purple-600 to-purple-800 text-white">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto space-y-8">
        <h2 class="text-3xl lg:text-4xl font-bold">{content.ctaSection.title}</h2>
        <p class="text-xl opacity-90">
          {content.ctaSection.description}
        </p>
        <form class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <input
            type="email"
            placeholder={content.ctaSection.placeholder}
            class="max-w-sm px-4 py-3 bg-white/10 border border-white/20 text-white placeholder:text-white/70 rounded-md"
            aria-label="Email address"
            required
          />
          <button type="submit" class="px-8 py-3 bg-white text-purple-600 hover:bg-gray-100 rounded-md font-medium transition-all" aria-label="Get Started Today">
            {content.ctaSection.button}
          </button>
        </form>
        <p class="text-sm opacity-75">{content.ctaSection.disclaimer}</p>
      </div>
    </div>
  </section>

  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="space-y-4">
          <div class="flex items-center space-x-2">
            <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-gradient-to-br from-purple-600 to-purple-800">
              <img src="/logo.svg" alt="PipxLabs Logo" class="h-8 w-8" />
            </div>
            <span class="text-xl font-bold">{content.siteTitle}</span>
          </div>
          <p class="text-gray-400">{content.footer.description}</p>
        </div>
        <div>
          <h4 class="font-semibold mb-4">{content.footer.services}</h4>
          <ul class="space-y-2 text-gray-400">
            <li>{content.footer.mobileDev}</li>
            <li>{content.footer.mobileSecurity}</li>
            <li>{content.footer.fullStackWeb}</li>
            <li>{content.footer.consulting}</li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold mb-4">{content.footer.company}</h4>
          <ul class="space-y-2 text-gray-400">
            <li>{content.footer.aboutUs}</li>
            <li>{content.footer.contact}</li>
          </ul>
        </div>
        <div class="hidden">
          <h4 class="font-semibold mb-4">Connect</h4>
          <ul class="space-y-2 text-gray-400">
            <li>LinkedIn</li>
            <li>X</li>
            <li>GitHub</li>
            <li>Blog</li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-400">
        <p>&copy; {year} {content.siteTitle}. {content.footer.copyright}</p>
      </div>
    </div>
  </footer>
</body>
</html>